@model IEnumerable<Book.Models.tbl_book>

@{
    ViewBag.Title = "BookOfPublisher";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>All Books of "@ViewBag.pu"</h2>

<table class="table">
    <tr>
        <th>
            Tittle
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th>
            Author
        </th>
        <th>
            Avatar
        </th>
        <th>
            Category
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.book_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.book_description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.book_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.book_quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_author.au_name)
            </td>
            <td>
                @if (item.book_img == "-1")
                {
                    <img src="~/Assets/images/avtTemp.jpg" style="width:60px; height:80px" />
                }
                else
                {
                    <img src="~/Assets/images/@item.book_img" style="width:60px; height:80px" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_category.cate_name)
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back", "ShowPublisher", "Admin")
</div>
